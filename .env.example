# Copier ce fichier vers .env et remplir les valeurs
# cp .env.example .env

# ===== OBLIGATOIRE =====

# Gemini API - Obtenir sur https://makersuite.google.com/app/apikey
GEMINI_API_KEY=your_gemini_api_key_here

# PostgreSQL Database
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=travel_assistant
POSTGRES_USER=travel_user
POSTGRES_PASSWORD=change_this_secure_password

# Application Settings
APP_SECRET_KEY=generate_a_random_secret_key_here
DEBUG_MODE=True

# ===== OPTIONNEL (pour plus tard) =====

# Google Maps API - Pour les cartes et lieux
# Obtenir sur https://console.cloud.google.com/
GOOGLE_MAPS_API_KEY=

# SerpAPI - Pour la recherche web
# Obtenir sur https://serpapi.com/
SERP_API_KEY=

# Firebase - Pour l'authentification
# Obtenir sur https://console.firebase.google.com/
FIREBASE_API_KEY=
FIREBASE_AUTH_DOMAIN=
FIREBASE_PROJECT_ID=
FIREBASE_STORAGE_BUCKET=
FIREBASE_MESSAGING_SENDER_ID=
FIREBASE_APP_ID=

# OpenWeather API - Pour la météo
# Obtenir sur https://openweathermap.org/api
OPENWEATHER_API_KEY=

# Stripe - Pour les paiements (version premium)
# Obtenir sur https://stripe.com/
STRIPE_SECRET_KEY=
STRIPE_PUBLISHABLE_KEY=